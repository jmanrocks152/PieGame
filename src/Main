import pygame

from pygame import *
from math import *
from random import *
from sys import *

pygame.init()

screen = pygame.display.set_mode((600, 500))

myfont = pygame.font.Font(None, 60)

BLACK = 0, 0, 0
# color = random.randint(0, 255), random.randint(0, 255), random.randint(0, 255)
color = 255, 255, 255
WIDTH = 8
majoraxisx1 = 0
majoraxisy1 = 300
majoraxisx2 = 500
majoraxisy2 = 300
minoraxisx1 = 250
minoraxisy1 = 200
minoraxisx2 = 250
minoraxisy2 = 400
positionx = abs(majoraxisx1 - majoraxisx2)
positiony = abs(majoraxisy1 - majoraxisy2)
positionWidth = 0.5 * abs(minoraxisx1-minoraxisx2)
positionHeight = 0.5 * abs(minoraxisy1-minoraxisy2)

position = positionx, positiony, positionWidth, positionHeight

screen.fill(BLACK)

while True:
    for event in pygame.event.get():
        if event.type in (QUIT, KEYDOWN):
            sys.exit()
        pygame.draw.arc(screen, color, position, math.radians(0), math.radians(180), WIDTH)

